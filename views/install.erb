<html>
	<head>
		<meta name="viewport" content="width=device-width, user-scalable=no" />		
		<style type="text/css" media="screen">
		html, body {
			margin: 0px;
			font-family: Verdana;
			text-align: center;
			background-color: #4a525a;
			color: #fff;
		}

		#content {
			margin: 0px;
			padding-top: 60px;
			text-align: center;			
		}

		a {
			font-size: 24px;
			text-decoration: none;
			color: #fff;			
		}
		
		.row {

		}
		
		.hint {
			text-align: center;			
			font-size: 12px;
			color: grey;
		}
		
		h1 {
			font-size: 36px;
		}
		</style>		
	</head>
	<body>
		<div id="content">
			<div id="header">
				<!--
				<h1>Merck App Store</h1>
				-->
			</div>
			<% @mfs.select {|mf| mf['name'] == 'AppStore'}.each do |mf| %>
			<div class="row"><a href="itms-services://?action=download-manifest&url=<%= base_url %>/mf/<%= mf['name'] %>.plist">Install Merck <%= mf['display_name'] %></a></div>
			<% end %>
			<div class="hint">tap it ^</div>		
		</div>
	</body>
<html>